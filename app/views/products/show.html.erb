<h1><%= @product.name %></h1>

<div class="card">
  <div class="card-body">
    <p><%= @product.description %></p>
    <h3 class="text-success">$<%= @product.current_price %></h3>
    <p><strong>Category:</strong> <%= @product.category.name %></p>
    <p><strong>SKU:</strong> <%= @product.sku %></p>
    <p><strong>In Stock:</strong> <%= @product.stock_quantity %> units</p>
  </div>
</div>

<%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
<%= link_to "View Category", category_path(@product.category), class: "btn btn-primary" %>